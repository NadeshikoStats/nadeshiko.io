     const bg2 = document.getElementById("background2");
     if (bg1.style.opacity == '1' || bg1.style.opacity === '') {
       bg2.style.backgroundImage = "url('/img/lobby/" + gamemode + ".png')";
       bg1.style.opacity = '0';
       bg2.style.opacity = '1';
     } else {
       bg1.style.backgroundImage = "url('/img/lobby/" + gamemode + ".png')";
       bg2.style.opacity = '0';
       bg1.style.opacity = '1';
     }
   }

